clear all 
close all

% Theta (rad) 
th = linspace(-pi, pi, 101);

% Choose n = 1 for neo-hookean model

% Fig 3A 
n = [0.7 1 2 3];
% Fig 3B
%n = [1.7, 2, 3];

for ii = 1:length(n)
    % Kappa 
    k = 1 - 1/n(ii); 
    
    % omega [dimensionless function]
    w = sqrt(1 - (k*sin(th)).^2);

    % U (dimensionless) 
    U = sin(th./2).*sqrt(1 - (2*(k*cos(th./2)).^2)/(1+w)).*(w+k.*cos(th)).^(k/2);

    figure(1) 
    plot(th, U, 'LineWidth', 2.5)
    hold on 
    
end 

for ii = 1:length(c)
    y2(ii,:) = (1/a)*sin(th./2);
    y1(ii,:) = 2*c(ii)*y2(ii,:).^2*(cos(th)/(1-cos(th)));    
end 